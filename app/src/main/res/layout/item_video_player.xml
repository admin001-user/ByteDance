<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 背景美化层：使用缩放封面图填充，避免 FIT 模式出现黑边时不美观 -->
    <ImageView
        android:id="@+id/bgArtwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:src="@drawable/ic_launcher_background"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="video_thumbnail"
        app:resize_mode="fit"
        app:shutter_background_color="@android:color/transparent"
        app:surface_type="texture_view"
        app:use_artwork="false"
        app:use_controller="false" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 头像 + 关注按钮（右侧操作区顶部） -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="58dp"
                android:layout_marginBottom="12dp">
                
                <ImageView
                    android:id="@+id/author_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"/>
                    
                <ImageView
                    android:id="@+id/follow_button"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/circle_bg_white"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="@android:color/holo_red_light"/>
            </FrameLayout>

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_douyin_like_1"
                app:tint="@color/douyinIcon" />

            <TextView
                android:id="@+id/like_count_text"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/douyinText"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/comment_dots"
                app:tint="@color/douyinIcon" />

            <TextView
                android:id="@+id/comment_count_text"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/douyinText"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_douyin_share"
                app:tint="@color/douyinIcon" />

            <TextView
                android:id="@+id/share_count_text"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/douyinText"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.exoplayer2.ui.PlayerView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <!-- 暂停叠层图标 -->
    <ImageView
        android:id="@+id/pauseOverlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:alpha="0.85"
        android:visibility="gone"
        android:src="@android:drawable/ic_media_play" />

    <!-- 底部控制条：包含「描述文案+时间文本+进度条」，统一管理间距 -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingBottom="24dp">

        <!-- 作者名称 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">
            <TextView
                android:id="@+id/authorNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@作者"/>
        </LinearLayout>

    <!-- 第一步：描述文案（移到controlBar内，放在进度条上方） -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="8dp" />  <!-- 控制文案与下方进度条的距离（核心！） -->

    <!-- 第二行：左右时间文本 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/currentTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:textSize="12sp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/totalTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:textSize="12sp"
            android:textAlignment="viewEnd" />
        </LinearLayout>

    <!-- 第三行：进度条 -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="1000"
            android:progress="0"
            android:progressTint="@android:color/white"
            android:thumbTint="@android:color/white"
            android:alpha="0.6" />
    </LinearLayout>

    <!-- 拖动时的缩略图预览 -->
    <ImageView
        android:id="@+id/thumbnailPreview"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="56dp"
        android:scaleType="centerCrop"
        android:background="#66000000"
        android:visibility="gone" />

    <!-- 双击点赞心形动画层 -->
    <ImageView
        android:id="@+id/likeAnim"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_douyin_like_1"
        android:tint="@color/douyinIconLiked"
        android:visibility="gone"/>

    <!-- 右下角音乐唱片（播放时旋转） -->
    <ImageView
        android:id="@+id/musicDisc"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/music_box"/>

</FrameLayout>
